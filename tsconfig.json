{
    "compilerOptions":{
        "module": "commonjs",
        "target": "es2015",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "isolatedModules": true,
//        "types": ["node"],
//        "typeRoots": ["./node_modules/@types"],
        "outDir": "./dist",
        "declaration": true,
        "skipLibCheck": true,
        "allowJs": true,
    },
    "include": [
        "libs",
        "src"
    ],
    "exclude": [
        "build",
        "node_modules"
    ]
}